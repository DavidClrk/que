doctype html
html(lang='en')
  head
    title Token Print
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic">
    <link rel="stylesheet" href="//fonts.googleapis.com/icon?family=Material+Icons">
    link(rel='stylesheet' href='/styles.bundle.css')
    style.
      * {
        padding: 0;
        margin: 0;
      }
      body {
        font-family: Roboto,Noto Sans,Noto,sans-serif,Faruma!important;
      }
  body
    div(style="width:58mm; background-color:#CCC;")
      div(style="padding-top:10px;")
        div(style="float:left; width:45%;font-size:10px;padding-left:10px;")
          p= datePrinted
        div(style="float:left; width:45%;font-size:10px;text-align:right;padding-right:10px;")
          p މާލެ ސިޓީ ކައުންސިލްގެ އިދާރާ
      div(style="clear:both;text-align:center;padding-top:20px;font-size:12px;")
        p= service
      div(style="text-align:center;font-size:20px;padding-top:10px;")
        h1= tokenNo
      div(style="text-align:center;font-size:12px;padding-bottom:10px;")
        p Kindly stay at waiting area, we will be attending to you shortly.

    script.
      window.onload = function() {
        window.focus();
        window.print();
        window.close();
      }
